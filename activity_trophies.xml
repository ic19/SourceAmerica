<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Trophies">

    <TextView
        android:id="@+id/trophiesLabel"
        android:layout_width="178dp"
        android:layout_height="69dp"
        android:gravity="center"
        android:text="trophies"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp" />


    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="368dp"
        android:layout_height="460dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trophiesLabel">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

    <ImageView
        android:id="@+id/trophy1"
        android:layout_width="83dp"
        android:layout_height="83dp"
        app:srcCompat="@android:drawable/ic_lock_lock"
        android:layout_marginLeft="10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/trophiesLabel"
        app:layout_constraintTop_toBottomOf="@id/trophiesLabel" />

    <ImageView
        android:id="@+id/trophy2"
        android:layout_width="83dp"
        android:layout_height="83dp"
        android:layout_marginLeft="20sp"
        app:srcCompat="@android:drawable/ic_lock_lock"
        app:layout_constraintLeft_toRightOf="@id/trophy1"
        app:layout_constraintTop_toBottomOf="@id/trophiesLabel" />

    <ImageView
        android:id="@+id/trophy3"
        android:layout_width="83dp"
        android:layout_height="83dp"
        android:layout_marginLeft="30sp"
        app:layout_constraintLeft_toRightOf="@id/trophy2"
        app:layout_constraintTop_toBottomOf="@id/trophiesLabel"
        app:srcCompat="@android:drawable/ic_lock_lock" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="@id/trophiesLabel"
        android:layout_marginLeft="500sp"
        android:text="Home"
        android:textSize="20sp" />


</android.support.constraint.ConstraintLayout>